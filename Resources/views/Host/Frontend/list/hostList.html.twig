<div class="panel panel-default">
    <div class="panel-heading">
        <strong>{{ icon('unlock-alt fa-fw') }}{{ ' Hosts'|trans }}</strong>
        <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        <div class="pull-right">
            <div class="btn-group">
                <a class="btn btn-default btn-xs" href="{{ path('cert_unlp_ngen_host_new') }}">
                    {{ icon('plus-circle fa-fw') }}{{ 'add Host'| trans }}
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <tr role="row">
            <th>{{ knp_pagination_sortable(Hosts, 'Address'|trans , 'ip') }}</th>
            <th>{{ knp_pagination_sortable(Hosts, 'Network'|trans, 'network.ip') }}</th>
            <th>{{ knp_pagination_sortable(Hosts, 'Active'|trans, 'isActive') }}</th>
            <th>{{ 'Action'|trans }}</th>
        </tr>
        <tbody>
        {% for Host in Hosts %}
            {% include 'CertUnlpNgenBundle:Host:Frontend/list/hostListRow.html.twig' with {'Host': Host} %}
        {% endfor %}
        </tbody>

    </table>
</div>
<div class="pagination-centered">
    {{ knp_pagination_render(Hosts, null, {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
</div>
