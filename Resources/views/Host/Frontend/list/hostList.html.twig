<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <strong>{{ 'Showing'|trans }}</strong>
            <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tabla_hosts" class="table table-bordered">
                <thead>
                <tr role="row">
                    <th>{{ 'Action'|trans }}</th>
                    <th>{{ knp_pagination_sortable(hosts, 'Address'|trans , 'address') }}</th>
                    <th>{{ knp_pagination_sortable(hosts, 'Active'|trans, 'isActive') }}</th>
                    <th>{{ knp_pagination_sortable(hosts, 'Network'|trans, 'network.ip') }}</th>
                    <th>{{ knp_pagination_sortable(hosts, 'Created'|trans, 'createdAt') }}</th>
                    <th>{{ knp_pagination_sortable(hosts, 'Updated'|trans, 'updatedAt') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for host in hosts %}
                    {% include 'CertUnlpNgenBundle:Host:Frontend/list/hostListRow.html.twig' with {'host': host} %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="pagination justify-content-center">
    {{ knp_pagination_render(hosts, null, {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
</div>

