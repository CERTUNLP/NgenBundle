{% macro link(object,action) %}
    {% if object.addressObject.type == 'ip_v4' %}
        {{ path('cert_unlp_ngen_host_'~action~'_host_ip_v4',{"ip": object.address,"ip_mask":object.addressMask}) }}
    {% elseif object.addressObject.type == 'ip_v6' %}
        {{ path('cert_unlp_ngen_host_'~action~'_host_ip_v6',{"ip": object.address,"ip_mask":object.addressMask}) }}
    {% else %}
        {{ path('cert_unlp_ngen_host_'~action~'_host_domain',{"domain": object.address}) }}
    {% endif %}
{% endmacro %}