<div class="mx-2 my-3">
{% for phase in phases %}
    {% if phase.children is defined %}
        <div>
            <a class="btn btn-primary font-weight-bold font-italic ml-1" data-toggle="collapse" href="#collapse_{{phase.id}}">
                <i class="fas fa-list-alt font-weight-bold text-white"></i> {{ phase.name}}
            </a>
        <div>
        <div class="collapse border my-3 ml-1" id="collapse_{{phase.id}}">
            <div class="mx-2 my-3">
                <span class="font-weight-bold font-italic mr-1">{{ 'Description'|trans }}</span>
                <span>{{ phase.description}}</span>
            </div>
                {% include "@CertUnlpNgen/Playbook/Frontend/PlaybookViews/phaseTable.html.twig" with {'phases': phase.children} %}
            </div>
        </div>
    {% else %}
        <div class="m-2"> <i class="fas fa-arrow-right font-weight-bold mr-2"></i>{{ phase.name}}</div>
    {% endif %}
{% endfor %}
</div>
