{% import '@CertUnlpNgen/Frontend/detailMacros.html.twig' as print %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <strong>{{ 'Showing'|trans }}</strong>
            <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tabla_playbooks" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                <tr role="row">
                    <th>{{ 'Details'|trans }}  </th>
                    <th>{{ knp_pagination_sortable(playbooks, 'Name'|trans, 'name') }}</th>
                    <th>{{ knp_pagination_sortable(playbooks, 'Incident Type'|trans, 'incident Type') }}</th>
                    <th>{{ knp_pagination_sortable(playbooks, 'Description'|trans, 'Description') }}</th>
                    <th>{{ knp_pagination_sortable(playbooks, 'Created'|trans, 'created') }}</th>
                    <th>{{ knp_pagination_sortable(playbooks, 'Updated'|trans, 'updated') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for playbook in playbooks %}
                    {% include 'CertUnlpNgenBundle:Playbook:Frontend/list/playbookListRow.html.twig' with {'playbook': playbook} %}
                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>
</div>
<div class="pagination justify-content-center">
    {{ knp_pagination_render(playbooks, null, {}, { "prev_label": "Previous"|trans, "next_label": "Next"|trans, "first_label": "First"|trans, "last_label": "Last"|trans}) }}
</div>
