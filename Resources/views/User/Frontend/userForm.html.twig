{% extends 'CertUnlpNgenBundle::User/Frontend/frontend.html.twig' %}
{% block content_header %}
    <h1 class="h3 mb-0 text-gray-800">{{ icon('plus-circle fa-fw') }}{{ 'add user'|trans }}</h1>
{% endblock %}
{% block content_body %}
    <div id="error">
    </div>
    {% if (form is not null) %}
        {% form_theme form
            'jquery.collection.html.twig'
            'CertUnlpNgenBundle:NetworkAdmin/Frontend:contacts.html.twig' %}
        {{ form(form, {'attr': {'role':'form','id': 'add_update_form'},'style': 'horizontal' ,'col_size': 'sm' }) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/user/UserForm.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var user_form = new UserForm();
        $('.user-contacts').collection({
                drag_drop: false,
                allow_up: false,
                allow_down: false,
                allow_duplicate: false,
                fade_in: false,
                fade_out: false,
                add_at_the_end: true,
                init_with_n_elements: 0,
                add: '<a href="#" class="btn btn-info d-block"><span class="fa fa-plus "></span></a>',
            }
        );
    </script>
{% endblock %}