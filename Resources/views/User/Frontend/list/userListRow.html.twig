{% import '@CertUnlpNgen/Frontend/detailMacros.html.twig' as print %}

<tr data-id="{{ user.username }}">
    <td class="text-center">
        {% include '@CertUnlpNgen/Frontend/list/listDropdown.html.twig' with {'object':user , 'detail_link': path('cert_unlp_ngen_user_detail_user',{ 'username': user.username}),'edit_link': path('cert_unlp_ngen_user_edit_user',{'username': user.username})} %}
    </td>
    <td id="state_label_holder" class="text-center">
        {{ print.statusdropbox(user) }}
    </td>
    <td class="text-center">
        <div class="float-left">
            {{ print.colordropbox(user.color,user.icon,user.username,'#',user.username) }}
        </div>
    </td>
    <td class="text-center">
        <div class="float-left">
            {{ print.colordropbox(user.color,user.icon,user.fullName,'#',user.fullName) }}
        </div>
    </td>
    <td class="text-center">
        <div class="float-left">
            {#            {% for email in user.emails %}#}
            {#                {{ print.colordropbox(user.color,'envelope',email,'#',email) }}#}
            {#            {% endfor %}#}
            {{ print.colordropbox(user.color,'envelope',user.email,'#',user.email) }}
        </div>
    </td>
    <td class="text-center">
        {{ print.colordropbox('primary','calendar-alt',user.lastLogin|date('Y-m-d'),'#',user.lastLogin|date('Y-m-d')) }}

    </td>
    <td class="text-center">
        <small>
            {{ print.colordropbox('primary','calendar-alt',user.createdAt|date('Y-m-d'),'#',user.createdAt|date('Y-m-d')) }}
        </small>
    </td>
    <td class="text-center">
        <small>
            {{ print.colordropbox('primary','calendar-alt',user.updatedAt|date('Y-m-d'),'#',user.updatedAt|date('Y-m-d')) }}
        </small>
    </td>
</tr>