{% extends 'CertUnlpNgenBundle::base.html.twig' %}

{% block title %}{{ 'User Login'|trans }}{% endblock %}
{% block id 'login' %}
{% block body %}

    <style>
        .login-image-ngen{
            background:url({{ asset('bundles/certunlpngen/images/ngen01.svg') }});
            background-position: center;
            background-size: contain;
        }
    </style>
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">

                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block login-image-ngen" ></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">{{ 'Welcome Back!'|trans }}</h1>
                                    </div>
                                    <form role="form" class="user" _lpchecked="1"
                                          action="{{ path('fos_user_security_check') }}" method="post">
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"/>
                                        {% if error %}
                                            <div class="alert-danger">{{ error.message }}</div>
                                        {% endif %}
                                        <div class="form-group">
                                            <input value="{{ last_username }}" type="text" id="username"
                                                   name="_username"
                                                   class="form-control form-control-user" placeholder="Username"
                                                   required="" autofocus=""
                                                   autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" id="password" name="_password"
                                                   class="form-control form-control-user"
                                                   placeholder="Password" required="" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="remember_me"
                                                       checked>
                                                <label class="custom-control-label"
                                                       for="remember_me">{{ 'Remember me'|trans }}</label>
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <input class="btn btn-primary btn-user btn-block" type="submit"
                                                   name="login"
                                                   value="{{ "Login" | trans }}"/>
                                        </div>
                                    </form>

                                    <hr>
                                    <div class="text-center">
                                        <a class="small pull-right btn btn-link"
                                           href="{{ path('fos_user_resetting_request') }}">
                                            {{ 'Forgot password?'|trans }}
                                        </a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small pull-left btn btn-link"
                                           href="{{ path('fos_user_registration_register') }}">{{ 'Register'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}