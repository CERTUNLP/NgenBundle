{% extends 'CertUnlpNgenBundle::frontend.html.twig' %}

{% block title %}{{ 'Users'|trans }}{% endblock %}
    {% block content_header %}
        <h1 class="h3 mb-0 text-gray-800">{{ icon('users fa-fw') }} {{ 'Users'|trans }}</h1>
        <a href="{{ path('cert_unlp_ngen_user_new_user') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus-circle fa-sm text-white-50"></i>{{ 'add User'|trans }} </a>
   {% endblock %}


{% block sideBar_search_path %}{{ path('cert_unlp_ngen_user_search_user') }}{% endblock %}

{% block content_body %}
    {% include 'CertUnlpNgenBundle:User:Frontend/list/userList.html.twig' with {'users': objects} %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/user/User.js'
        '@CertUnlpNgenBundle/Resources/public/js/user/UserApi.js' %}
        <script src="{{ asset('js/jquery.collection.js') }}"></script>
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var user = new User();
        var user_api = new UserApi("{{ path("api_get") }}", "{{ app.user.apiKey }}");
    </script>
{% endblock %}
