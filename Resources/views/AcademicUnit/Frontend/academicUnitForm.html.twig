{% extends 'CertUnlpNgenBundle::AcademicUnit/Frontend/frontend.html.twig' %}
{% block content_header %}
    <h1 class="page-header">{{ icon('plus-circle fa-fw') }}Add Academic Unit</h1>
{% endblock %}
{% block content_body %}
    {% if (form is not null) %}
        {{ form_errors(form, { 'global_errors': true }) }}
        {{ form(form, {'attr': {'id': 'add_update_form'},'method': method | default('post'),'style': 'horizontal', 'col_size': 'sm' }) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/academic_unit/AcademicUnitForm.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var academic_unit_form = new AcademicUnitForm();
    </script>
{% endblock %}