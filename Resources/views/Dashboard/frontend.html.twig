{% extends 'CertUnlpNgenBundle::frontend.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content_header %}
    <h1 class="h3 mb-0 text-gray-800">{{ icon('fas fa-laptop') }} {{ 'Dashboards'|trans }}</h1>
{% endblock %}

{% block sideBar_search_path %}{% endblock %}

{% block content_body %}
    <div class="embed-container">
        <iframe id="internal" width="100%" frameborder="0" allowfullscreen>
        </iframe>
    </div>

    <div class="embed-container" >
        <iframe id="external" width="100%" frameborder="0" allowfullscreen>
        </iframe>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
   <script>
       $.ajax({
           url: "/secure/{{ externalDashboard }}",
           beforeSend: function(xhr) { xhr.setRequestHeader("Authorization", "Basic " + btoa("auth" + ":" + "{{ app.user.apiKey }}")); },
           method: "GET",
       });
       $.ajax({
           url: "/secure/{{ internalDashboard }}",
           beforeSend: function(xhr) { xhr.setRequestHeader("Authorization", "Basic " + btoa("auth" + ":" + "{{ app.user.apiKey }}")); },
           method: "GET",
       });
   </script>

{% endblock %}
