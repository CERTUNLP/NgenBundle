{% extends 'CertUnlpNgenBundle::NetworkEntity/Frontend/frontend.html.twig' %}
{% block content_header %}
    <h1 class="page-header"> {{ object }}
        {% include "CertUnlpNgenBundle:NetworkEntity:Frontend/list/stateLabel.html.twig" with {'networkEntity': object} %}
    </h1>
{% endblock %}
{% block content_body %}
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'Network Entity Information'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <td class="">
                                    {{ "System Id"|trans }}
                                </td>
                                <td class="">
                                    {{ object.id }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Name'|trans }}
                                </td>
                                <td class="">
                                    {{ object.name }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Created at'|trans }}
                                </td>
                                <td class="">
                                    {{ object.createdAt|date('Y-m-d') }}
                                </td>
                            </tr>

                            <tr>
                                <td class="">
                                    {{ 'Last Update'|trans }}
                                </td>
                                <td class="">
                                    {{ object.updatedAt|date('Y-m-d') }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Active'|trans }}
                                </td>
                                <td class="">
                                    {% include "CertUnlpNgenBundle:NetworkEntity:Frontend/list/stateLabel.html.twig" with {'networkEntity': object} %}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Network Entities'|trans }}
                                </td>
                                <td class="">
                                    <a target="_blank" type="button" class="btn btn-sm btn-primary" role="button"
                                       href="{{ path('cert_unlp_ngen_network_search_network',{'term': '"'~object.name~'"'}) }}">
                                        <span>{{ label_info(object.networks.count) }} </span>
                                        <span>{{ 'search'|trans }}</span>
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}