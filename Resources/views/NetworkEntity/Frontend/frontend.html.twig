{% extends 'CertUnlpNgenBundle::frontend.html.twig' %}

{% block title %}{{ 'Network Entities'|trans }}{% endblock %}

{% block content_header %}
    <h1 class="h3 mb-0 text-gray-800">{{ icon('fa fa-fas fa-sitemap') }} {{ 'Network Entities'|trans }}</h1>
    <a href="{{ path('cert_unlp_ngen_incident_state_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus-circle fa-sm text-white-50"></i>{{ 'add Network Entity'|trans }} </a>

{% endblock %}


{% block sideBar_search_path %}{{ path('cert_unlp_ngen_network_entity_search') }}{% endblock %}

{% block content_body %}
    {% include 'CertUnlpNgenBundle:NetworkEntity:Frontend/list/networkEntityList.html.twig' with {'networkEntitys': objects  } %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/network_entity/NetworkEntity.js'
        '@CertUnlpNgenBundle/Resources/public/js/network_entity/NetworkEntityApi.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var network_entity = new NetworkEntity();
        var network_entity_api = new NetworkEntityApi("{{ path("api_get") }}", "{{ app.user.apiKey }}");
    </script>
{% endblock %}
