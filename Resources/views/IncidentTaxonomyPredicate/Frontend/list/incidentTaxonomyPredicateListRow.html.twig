<tr data-id="{{ incidentTaxonomyPredicate.slug }}">
    <td class="align-middle">
        {{ incidentTaxonomyPredicate.expanded }}
    </td>
    <td class="align-middle">
        {{ incidentTaxonomyPredicate.description | default('No description')| trans }}
    </td>
    <td class="align-middle">
        {{ label_info(incidentTaxonomyPredicate.values.count) }}
