    <td id="state_label_holder" class="align-middle">
        <div>
            {% include "CertUnlpNgenBundle:IncidentTaxonomyPredicate:Frontend/list/stateLabel.html.twig" with {'incidentTaxonomyPredicate': incidentTaxonomyPredicate} %}
        </div>
