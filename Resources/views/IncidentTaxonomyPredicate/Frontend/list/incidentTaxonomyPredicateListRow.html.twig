    <td class="align-middle">
        {% include '@CertUnlpNgen/Frontend/list/listDropdown.html.twig' with {'object':incidentTaxonomyPredicate , 'detail_link': path('cert_unlp_ngen_taxonomy_predicate_detail',{ 'slug': incidentTaxonomyPredicate.slug})} %}
