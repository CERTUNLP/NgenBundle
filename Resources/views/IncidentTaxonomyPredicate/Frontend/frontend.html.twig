{% extends 'CertUnlpNgenBundle::frontend.html.twig' %}

{% block title %}{{ 'Incident Taxonomy Predicates'|trans }}{% endblock %}

{% block content_header %}
    <h1 class="h3 mb-0 text-gray-800">{{ icon('fa fa-fas fa-cubes') }} {{ 'Incident Taxonomy Predicates'|trans }}</h1>
    <a href="{{ path('cert_unlp_ngen_taxonomy_predicate_new') }}"
       class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus-circle fa-sm text-white-50"></i>{{ 'add Predicate'|trans }} </a>

{% endblock %}

{% block sideBar_search_path %}{{ path('cert_unlp_ngen_incident_predicate_search') }}{% endblock %}

{% block content_body %}
    {% include '@CertUnlpNgen/IncidentTaxonomyPredicate/Frontend/list/incidentTaxonomyPredicateList.html.twig' with {'incidentTaxonomyPredicate': objects  } %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/incident/taxonomy/IncidentTaxonomyPredicate.js'
        '@CertUnlpNgenBundle/Resources/public/js/incident/taxonomy/IncidentTaxonomyPredicateApi.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var incident_taxonomy_predicate = new IncidentTaxonomyPredicate();
        var incident_taxonomy_predicate_api = new IncidentTaxonomyPredicateApi("{{ path("api_get") }}", "{{ app.user.apiKey }}");
    </script>
{% endblock %}