<div class="panel panel-default">
    <div class="panel-heading">
        <strong>{{ icon('unlock-alt fa-fw') }} Incident States</strong>
        <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        <div class="pull-right">
            <div class="btn-group">
                <a class="btn btn-default btn-xs" href="{{ path('cert_unlp_ngen_incident_state_new') }}">
                    {{ icon('plus-circle fa-fw') }}add incident state
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <tr role="row">
            <th>{{ knp_pagination_sortable(incidentStates, 'Name', 'slug') }}</th>
            <th>{{ knp_pagination_sortable(incidentStates, 'Mail to Admin', 'slug') }}</th>
            <th>{{ knp_pagination_sortable(incidentStates, 'Mail to Reporter', 'isActive') }}</th>

            <th>{{ knp_pagination_sortable(incidentStates, 'active', 'isActive') }}</th>
            <th>Action</th>
        </tr>
        <tbody>
        {% for incidentState in incidentStates %}
            {% include 'CertUnlpNgenBundle:IncidentState:Frontend/list/incidentStateListRow.html.twig' with {'incidentState': incidentState} %}
        {% endfor %}
        </tbody>

    </table>
</div>
<div class="pagination-centered">
    {{ knp_pagination_render(incidentStates, null, {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
</div>
