{% include 'CertUnlpNgenBundle:InternalIncident:Report/Twig/BaseReport/head.html.twig' %}
<table class="row">
    <tr>
        <td class="wrapper last">
            <table class="twelve columns">
                <tr>
                    <td>
                        {% block greeting %}
                            {% include 'CertUnlpNgenBundle:InternalIncident:Report/Twig/BaseReport/headerReport.html.twig' %}
                        {% endblock %}
                        {% if block('problem') is defined %}
                            {{block('problem')}}
                        {% endif %}
                    </td>
                    <td class="expander"></td>
                </tr>
                {% block derivated_problem %}
                    <tr>
                        <td>
                            {% if block('derivated_problem_content') is defined %}
                                {{block('derivated_problem_content')}}
                            {% endif %}
                        </td>
                        <td class="expander"></td>
                    </tr>
                {% endblock %}
                {% block verification %}
                    <tr>
                        <td>
                            {% if block('verification_content') is defined %}
                                {{block('verification_content')}}
                            {% endif %}
                        </td>
                        <td class="expander"></td>
                    </tr>
                {% endblock %}
                {% block recomendations %}
                    <tr>
                        <td>
                            {% if block('recomendations_content') is defined %}
                                {{block('recomendations_content')}}
                            {% endif %}
                        </td>
                        <td class="expander"></td>
                    </tr>
                {% endblock %}
                {% block more_information %}
                    <tr>
                        <td>
                            {% if block('more_information_content') is defined %}
                                {{block('more_information_content')}}
                            {% endif %}
                        <td class="expander"></td>
                    </tr>
                {% endblock %}
            </table>

        </td>
    </tr>
</table>

{% include 'CertUnlpNgenBundle:InternalIncident:Report/Twig/BaseReport/foot.html.twig' with { 'incident': incident }%}