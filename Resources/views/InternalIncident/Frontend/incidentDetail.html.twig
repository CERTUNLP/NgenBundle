{% extends 'CertUnlpNgenBundle::Incident/Frontend/incidentDetail.html.twig' %}
{% block sideBar_search_path %}{{ path('cert_unlp_ngen_internal_incident_search_incident') }}{% endblock %}

{% block content_header %}
    <h1 class="page-header">{{ icon('arrow-circle-down fa-fw') }}Internal incident [ID: {{ object.id }}
        ][{{ object.type }}
        ]{% include "CertUnlpNgenBundle:Incident:Frontend/list/stateLabel.html.twig" with {'incident': object} %}</h1>
{% endblock %}


{% block network_body %}
    <div class="col-lg-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Network info</h3>
            </div>
            <div class="panel-body table-responsive">
                <table class="table table-bordered">
                    <tr>
                        <td class="">
                            IP/mask
                        </td>
                        <td class="">
                            {{ object.network }}
                        </td>
                    </tr>
                    <tr>
                        <td class="">
                            Active
                        </td>
                        <td class="">
                            {{ object.network.isActive ? 'Yes':'No' }}
                        </td>
                    </tr>
                    <tr>
                        <td class="">
                            Academic Unit
                        </td>
                        <td class="">
                            {{ object.network.networkEntity }}

                        </td>
                    </tr>
                    <tr>
                        <td class="">
                            Network Admin
                        </td>
                        <td class="">
                            {{ object.network.networkAdmin }}

                        </td>
                    </tr>
                    <tr>
                        <td class="">
                        </td>
                        <td class="">
                            {{ object.network.networkAdmin.email }}

                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block comments_body %}
    {{ render(controller('CertUnlpNgenBundle:Frontend/Incident/InternalIncidentFrontend:incidentComments', {'incident': object, 'request': app.request})) }}
{% endblock %}
