<div class="panel panel-default">
    <div class="panel-heading">
        <strong>{{icon('exclamation-circle fa-fw')}} Incidents</strong>
        <div class="pull-right">
            <div class="btn-group">
                <a class="btn btn-default btn-xs" href="{{path('cert_unlp_ngen_internal_incident_frontend_new_incident')}}">
                    {{icon('plus-circle fa-fw')}}add incident
                </a>
            </div>
        </div>
    </div>
<table class="table table-striped table-bordered table-hover dataTable no-footer">
    <tr role="row">
        <th>{{ knp_pagination_sortable(incidents, 'Status', 's.name') }}</th>
        <th>{{ knp_pagination_sortable(incidents, 'Host address', 'i.hostAddress') }}</th>
        <th>{{ knp_pagination_sortable(incidents, 'Type', 't.name') }}</th>
        <th>{{ knp_pagination_sortable(incidents, 'Feed', 'f.name') }}</th>
        <th>{{ knp_pagination_sortable(incidents, 'Date', 'i.date') }}</th>
        <th>Action</th>
    </tr>
    <tbody>
        {% for incident in incidents %}
            {% include 'CertUnlpNgenBundle:InternalIncident:Frontend/list/incidentListRow.html.twig' with {'incident': incident} %}
        {% endfor %}
    </tbody>

</table>
</div>
<div class="pagination-centered">
    {{ knp_pagination_render(incidents, null, {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
</div>
