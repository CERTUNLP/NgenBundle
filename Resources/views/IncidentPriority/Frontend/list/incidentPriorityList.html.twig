<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <strong>{{ 'Showing'|trans }}</strong>
            <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tabla_hosts" class="table table-borderedz">
                <thead>
                <tr role="row">
                    <th>{{ 'Action'|trans }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Active'|trans, 'isActive') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Impact'|trans, 'impact.slug') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Urgency'|trans, 'urgency.slug') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Description'|trans , 'name') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Response Time'|trans, 'responseTime') }}</th>
                    <th><small><b>{{ knp_pagination_sortable(IncidentPriorities, 'Closing unresponse time'|trans, 'unresponseTime') }}</b></small></th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Resolution Time'|trans, 'resolution_time') }}</th>
                    <th><small><b>{{ knp_pagination_sortable(IncidentPriorities, 'Closing unresolution time'|trans, 'unresolutionTime') }}</b></small></th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Created at'|trans, 'createdAt') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Updated at'|trans, 'updatedAt') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for IncidentPriority in IncidentPriorities %}
                    {% include 'CertUnlpNgenBundle:IncidentPriority:Frontend/list/incidentPriorityListRow.html.twig' with {'IncidentPriority': IncidentPriority} %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="pagination justify-content-center">
    {{ knp_pagination_render(IncidentPriorities, null, {}, { "prev_label": "Previous"|trans, "next_label": "Next"|trans, "first_label": "First"|trans, "last_label": "Last"|trans}) }}
</div>
