<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <strong>{{ 'Showing'|trans }}</strong>
            <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tabla_hosts" class="table table-borderedz">
                <thead>
                <tr role="row">
                    <th>{{ 'Action'|trans }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Active'|trans, 'active') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Impact'|trans, 'impact') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Urgency'|trans, 'urgency') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Name'|trans , 'name') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Response Time'|trans, 'responseTime') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Unresponse Time'|trans, 'unresponseTime') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Solve Time'|trans, 'solveTime') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Unsolve Time'|trans, 'unsolveTime') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Created'|trans, 'created') }}</th>
                    <th>{{ knp_pagination_sortable(IncidentPriorities, 'Updated'|trans, 'updated') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for IncidentPriority in IncidentPriorities %}
                    {% include 'CertUnlpNgenBundle:IncidentPriority:Frontend/list/incidentPriorityListRow.html.twig' with {'IncidentPriority': IncidentPriority} %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="pagination justify-content-center">
    {{ knp_pagination_render(IncidentPriorities, null, {}, { "prev_label": "Previous"|trans, "next_label": "Next"|trans, "first_label": "First"|trans, "last_label": "Last"|trans}) }}
</div>
