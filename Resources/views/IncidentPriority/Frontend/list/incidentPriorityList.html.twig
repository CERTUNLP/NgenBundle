<div class="panel panel-default">
    <div class="panel-heading">
        <strong>{{ icon('unlock-alt fa-fw') }}{{ 'Incident Priorities'|trans }}</strong>
        <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        <div class="pull-right">
            <div class="btn-group">
                <a class="btn btn-default btn-xs" href="{{ path('cert_unlp_ngen_incident_priority_new') }}">
                    {{ icon('plus-circle fa-fw') }}{{ 'add incident Priority'| trans }}
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <tr role="row">
            <th>{{ knp_pagination_sortable(IncidentPriorities, 'Name'|trans , 'name') }}</th>
            <th>{{ knp_pagination_sortable(IncidentPriorities, 'Code'|trans, 'code') }}</th>
            <th>{{ knp_pagination_sortable(IncidentPriorities, 'Impact'|trans, 'impact') }}</th>
            <th>{{ knp_pagination_sortable(IncidentPriorities, 'Urgency'|trans, 'urgency') }}</th>
            <th>{{ knp_pagination_sortable(IncidentPriorities, 'Response Time'|trans, 'response_time') }}</th>
            <th>{{ knp_pagination_sortable(IncidentPriorities, 'Resolution Time'|trans, 'resolution_time') }}</th>
            <th>{{ knp_pagination_sortable(IncidentPriorities, 'active'|trans, 'isActive') }}</th>
            <th>{{ 'Action'|trans }}</th>
        </tr>
        <tbody>
        {% for IncidentPriority in IncidentPriorities %}
            {% include 'CertUnlpNgenBundle:IncidentPriority:Frontend/list/incidentPriorityListRow.html.twig' with {'IncidentPriority': IncidentPriority} %}
        {% endfor %}
        </tbody>

    </table>
</div>
<div class="pagination-centered">
    {{ knp_pagination_render(IncidentPriorities, null, {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
</div>
