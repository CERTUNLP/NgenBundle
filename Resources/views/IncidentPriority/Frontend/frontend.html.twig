{% extends 'CertUnlpNgenBundle::frontend.html.twig' %}

{% block title %}{{'Incident Priorities'|trans}}{% endblock %}

{% block content_header %}
    <h1 class="h3 mb-0 text-gray-800">{{ icon('fa fa-fas fa-list-ol') }} {{ 'Incidents Priorities'|trans }}</h1>
    <a href="{{ path('cert_unlp_ngen_incident_priority_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus-circle fa-sm text-white-50"></i>{{ 'add priority'|trans }} </a>
{% endblock %}

{% block sideBar_search_path %}{{ path('cert_unlp_ngen_incident_priority_search') }}{% endblock %}

{% block content_body %}
    {% include 'CertUnlpNgenBundle:IncidentPriority:Frontend/list/incidentPriorityList.html.twig' with {'IncidentPriorities': objects  } %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/incident/priority/IncidentPriority.js'
        '@CertUnlpNgenBundle/Resources/public/js/incident/priority/IncidentPriorityApi.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var incident_priority = new IncidentPriority();
        var incident_priority_api = new IncidentPriorityApi("{{ path("api_get") }}", "{{ app.user.apiKey }}");
    </script>
{% endblock %}
