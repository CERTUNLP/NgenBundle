<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <strong>{{ 'Showing'|trans }}</strong>
            <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tabla_incidentes_feeds" class="table table-bordered">
                <thead>
                <tr role="row">
                    <th>Action</th>
                    <th>{{ knp_pagination_sortable(networks, 'Active'|trans, 'isActive') }}</th>
                    <th>{{ knp_pagination_sortable(networks, 'Address'|trans, 'address') }}</th>
                    <th>{{ knp_pagination_sortable(networks, 'Type'|trans, 'type') }}</th>
                    <th>{{ knp_pagination_sortable(networks, 'Entity'|trans, 'entity') }}</th>
                    <th>{{ knp_pagination_sortable(networks, 'Admin'|trans, 'admin') }}</th>
                    <th>{{ knp_pagination_sortable(networks, 'Created'|trans, 'createdAt') }}</th>
                    <th>{{ knp_pagination_sortable(networks, 'Updated'|trans, 'updatedAt') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for network in networks %}
                    {% include 'CertUnlpNgenBundle:Network:Frontend/list/networkListRow.html.twig' with {'network': network} %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="pagination justify-content-center">
    {{ knp_pagination_render(networks, null, {}, { "prev_label": "Previous"|trans, "next_label": "Next"|trans, "first_label": "First"|trans, "last_label": "Last"|trans}) }}
</div>
