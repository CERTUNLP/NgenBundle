{% extends 'CertUnlpNgenBundle:Incident:Frontend/frontend.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-sm-6 col-sm-offset-2 col-md-6 col-md-offset-0">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Network Information</h3>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                Sistem Id
                            </td>
                            <td class="">
                                {{network.id}}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                Ip/Mask
                            </td>
                            <td class="">
                                {{network.ipAndMask}}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                Created at 
                            </td>
                            <td class="">
                                {{network.createdAt|date('Y-m-d')}}
                            </td>
                        </tr>

                        <tr>
                            <td class="">
                                Last Update
                            </td>
                            <td class="">
                                {{network.updatedAt|date('Y-m-d')}}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                Active
                            </td>
                            <td class="">
                                {{network.isActive ? 'Yes':'No'}}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                Incidents
                            </td>
                            <td class="">
                                {{network.incidents.count}}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-2 col-md-6 col-md-offset-0">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Academic Unit Information</h3>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                Name
                            </td>
                            <td class="">
                                {{network.academicUnit}}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                Incidents
                            </td>
                            <td class="">
                                {{network.academicUnit.incidents.count}}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-2 col-md-6 col-md-offset-0">

            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Network Admin Information</h3>
                </div>
                <div class="panel-body table-responsive">

                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                Name
                            </td>
                            <td class="">
                                {{network.networkAdmin}}

                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                Email
                            </td>
                            <td class="">
                                {{network.networkAdmin.email}}

                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                Incidents
                            </td>
                            <td class="">
                                {{network.networkAdmin.incidents.count}}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
