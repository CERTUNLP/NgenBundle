{% extends 'CertUnlpNgenBundle::IncidentTaxonomyValue/Frontend/frontend.html.twig' %}
{% block content_header %}
    <h2 class="page-header">{{ icon('plus-circle fa-fw') }} {{ 'value'|trans }}</h2>
{% endblock %}
{% block content_body %}
    {% if (form is not null) %}
        {{ form_errors(form, { 'global_errors': true }) }}
        {{ form(form, {'attr': {'role':'form','id': 'add_update_form'},'method': method | default('post'),'style': 'horizontal', 'col_size': 'sm' }) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ tinymce_init({theme: {'simple': {'language': app.request.locale , 'height': 350 } } } ) }}


    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/incident/taxonomy/IncidentTaxonomyValue.js'
        '@CertUnlpNgenBundle/Resources/public/js/incident/taxonomy/IncidentTaxonomyValueApi.js'
        '@CertUnlpNgenBundle/Resources/public/js/incident/taxonomy/IncidentTaxonomyValueForm.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var incident_taxonomy_value = new IncidentValueTaxonomy();
        var incident_taxonomy_value_api = new IncidentValueTaxonomyApi("{{ path("api_get") }}", "{{ app.user.apiKey }}");
        var incident_taxonomy_value_form = new IncidentValueTaxonomyForm();
    </script>
{% endblock %}