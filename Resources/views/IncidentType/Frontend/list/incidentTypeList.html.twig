<div class="panel panel-default">
    <div class="panel-heading">
        <strong>{{ icon('cubes fa-fw') }} {{ 'Incident Types'|trans }}</strong>
        <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>
        <div class="pull-right">
            <div class="btn-group">
                <a class="btn btn-default btn-xs" href="{{ path('cert_unlp_ngen_incident_type_new') }}">
                    {{ icon('plus-circle fa-fw') }}{{ 'add incident type'|trans }}
                </a>
                <a class="btn btn-default btn-xs" href="{{ path('cert_unlp_ngen_incident_type_report_new') }}">
                    {{ icon('plus-circle fa-fw') }}{{ 'add incident report'|trans }}
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <tr role="row">
            <th>{{ knp_pagination_sortable(objects, 'Name'|trans, 'slug') }}</th>
            <th>{{ knp_pagination_sortable(objects, 'active'|trans, 'isActive') }}</th>
            <th>Reports</th>
            <th>Action</th>
        </tr>
        <tbody>
        {% for incidentType in incidentTypes %}
            {% include 'CertUnlpNgenBundle:IncidentType:Frontend/list/incidentTypeListRow.html.twig' with {'incidentType': incidentType} %}
        {% endfor %}
        </tbody>

    </table>
</div>
<div class="pagination-centered">
    {{ knp_pagination_render(incidentTypes, null, {}, { "prev_label": "Previous"|trans, "next_label": "Next"|trans, "first_label": "First"|trans, "last_label": "Last"|trans}) }}
</div>
