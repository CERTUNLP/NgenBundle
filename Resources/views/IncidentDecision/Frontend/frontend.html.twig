{% extends 'CertUnlpNgenBundle::frontend.html.twig' %}

{% block title %}{{'Incident Decisions'|trans}}{% endblock %}

{% block content_header %}
    <h1 class="h3 mb-0 text-gray-800">{{ icon('question fa-fw') }} {{ 'Incident Decisions'|trans }}</h1>
    <a href="{{ path('cert_unlp_ngen_incident_decision_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus-circle fa-sm text-white-50"></i>{{ 'add Decision'|trans }} </a>
{% endblock %}


{% block sideBar_search_path %}{{ path('cert_unlp_ngen_incident_decision_search') }}{% endblock %}

{% block content_body %}
    {% include 'CertUnlpNgenBundle:IncidentDecision:Frontend/list/incidentDecisionList.html.twig' with {'IncidentDecisions': objects  } %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/incident/decision/IncidentDecision.js'
        '@CertUnlpNgenBundle/Resources/public/js/incident/decision/IncidentDecisionApi.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var incident_decision = new IncidentDecision();
        var incident_decision_api = new IncidentDecisionApi("{{ path("api_get") }}", "{{ app.user.apiKey }}");
    </script>
{% endblock %}
