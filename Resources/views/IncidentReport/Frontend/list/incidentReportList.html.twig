<div class="card shadow mb-4">
    <div class="card-header py-3 d-sm-flex align-items-center justify-content-between mb-4">
        <h6 class="m-0 font-weight-bold text-primary">
{#            <strong>{{ 'Showing'|trans }}</strong>#}
{#            <strong>({{ objects.getPaginationData.lastItemNumber~"/"~objects.getTotalItemCount }})</strong>#}
        </h6>
        <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
           href="{{ path('cert_unlp_ngen_incident_type_report_new',{'type': type.slug}) }}">
            {{ icon('plus-circle fa-fw') }}add incident report
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tabla_hosts" class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr role="row">
                    <th>{{ 'Lang'|trans }}</th>
                    <th>{{ 'Active'|trans }}</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for incidentReport in objects %}
                    {% include 'CertUnlpNgenBundle:IncidentReport:Frontend/list/incidentReportListRow.html.twig' with {'incidentReport': incidentReport} %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
