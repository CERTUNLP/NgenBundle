{% extends 'CertUnlpNgenBundle::IncidentReport/Frontend/frontend.html.twig' %}
{% block content_header %}
   <h1 class="h3 mb-0 text-gray-800">{{ icon('plus-circle fa-fw') }}{{ 'report'|trans }}</h1>
{% endblock %}
{% block content_body %}
    {% if (form is not null) %}
        {{ form_errors(form, { 'global_errors': true }) }}
        {{ form(form, {'attr': {'role':'form','id': 'add_update_form'},'method': method | default('post'),'style': 'horizontal', 'col_size': 'sm' }) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ tinymce_init({theme: {'simple': {'language': app.request.locale , 'height': 350 } } } ) }}


    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/incident/report/IncidentReportForm.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var incident_report_form = new IncidentReportForm({"term": "{{ app.request.query.get('term') }}"});
    </script>
{% endblock %}