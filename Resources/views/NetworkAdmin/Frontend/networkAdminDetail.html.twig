{% extends 'CertUnlpNgenBundle::NetworkAdmin/Frontend/frontend.html.twig' %}
{% import '@CertUnlpNgen/Frontend/detailMacros.html.twig' as print %}
{% block content_header %}
    <h1 class="h3 mb-0 text-gray-800">
        {{ icon(object.icon ~' fa-fw text-'~object.color) }}
        {{ object }}
        {{ print.colorboxbutton('primary','id-card',object.id,'#') }}
        {{ print.statusbox(object) }}
        {{ print.colordropbox('primary','share-alt','networks '~object.networks.count,path('cert_unlp_ngen_network_search_network',{'term': 'admin: "'~object.name~'"'}),'','d-inline') }}
        {{ print.colorbox('primary','edit','Edit',path('cert_unlp_ngen_network_edit_network_admin_id',{'id': object.id})) }}
    </h1>
{% endblock %}
{% block content_body %}
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">{{ 'Network Admin Information'|trans }}</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <td class="">
                                    {{ "System Id"|trans }}
                                </td>
                                <td class="">
                                    {{ object.id }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Name'|trans }}
                                </td>
                                <td class="">
                                    {{ object.name }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Email'|trans }}
                                </td>
                                <td class="">
                                    <ul class="list-group">
                                        {% for email in object.emails %}
                                            <li class="list-group-item">
                                                {{ print.colordropbox(object.color,'envelope',email,'#',email) }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Created at'|trans }}
                                </td>
                                <td class="">
                                    {{ object.createdAt|date('Y-m-d') }}
                                </td>
                            </tr>

                            <tr>
                                <td class="">
                                    {{ 'Last Update'|trans }}
                                </td>
                                <td class="">
                                    {{ object.updatedAt|date('Y-m-d') }}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}