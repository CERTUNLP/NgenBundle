<div class="panel panel-default">
    <div class="panel-heading">
        <strong>{{icon('users fa-fw')}} Network admins</strong>
        <div class="pull-right">
            <div class="btn-group">
                <a class="btn btn-default btn-xs" href="{{path('cert_unlp_ngen_network_new_network_admin')}}">
                    {{icon('plus-circle fa-fw')}}add network admins
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <tr role="row">
            <th>{{ knp_pagination_sortable(networkAdmins, 'Name', 'na.name') }}</th>
            <th>{{ knp_pagination_sortable(networkAdmins, 'Email', 'na.name') }}</th>
            <th>{{ knp_pagination_sortable(networkAdmins, 'active', 'na.isActive') }}</th>
            <th>Action</th>
        </tr>
        <tbody>
            {% for networkAdmin in networkAdmins %}
                {% include 'CertUnlpNgenBundle:NetworkAdmin:Frontend/list/networkAdminListRow.html.twig' with {'networkAdmin': networkAdmin} %}
            {% endfor %}
        </tbody>

    </table>
</div>
<div class="pagination-centered">
    {{ knp_pagination_render(networkAdmins, null, {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
</div>
