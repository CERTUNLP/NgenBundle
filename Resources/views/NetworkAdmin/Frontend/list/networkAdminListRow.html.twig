{% import '@CertUnlpNgen/Frontend/detailMacros.html.twig' as print %}

<tr data-id="{{ networkAdmin.id }}">
    <td class="text-center">
        {% include '@CertUnlpNgen/Frontend/list/listDropdown.html.twig' with {'object':networkAdmin , 'detail_link': path('cert_unlp_ngen_network_detail_network_admin_id',{ 'id': networkAdmin.id}),'edit_link': path('cert_unlp_ngen_network_edit_network_admin_id',{'id': networkAdmin.id})} %}
    </td>
    <td id="state_label_holder" class="text-center">
        {{ print.statusdropbox(networkAdmin) }}
    </td>
    <td class="text-center">
        <div class="float-left">
            {{ print.colordropbox(networkAdmin.color,networkAdmin.icon,networkAdmin.name,'#',networkAdmin.name) }}
        </div>
    </td>
    <td class="text-center">
        <div class="float-left">
            {% if networkAdmin.emails is not empty %}
                {{ print.colordropbox(networkAdmin.color,'envelope',networkAdmin.emails[0],'#',networkAdmin.emails[0]) }}
            {% endif %}
        </div>
    </td>
    <td class="text-center">
        <small>
            {{ print.colordropbox('primary','calendar-alt',networkAdmin.createdAt|date('Y-m-d'),'#',networkAdmin.createdAt|date('Y-m-d')) }}
        </small>
    </td>
    <td class="text-center">
        <small>
            {{ print.colordropbox('primary','calendar-alt',networkAdmin.updatedAt|date('Y-m-d'),'#',networkAdmin.updatedAt|date('Y-m-d')) }}
        </small>
    </td>
</tr>