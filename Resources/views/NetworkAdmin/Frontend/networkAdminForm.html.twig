{% extends 'CertUnlpNgenBundle::NetworkAdmin/Frontend/frontend.html.twig' %}
{% block content_header %}
   <h1 class="h3 mb-0 text-gray-800">{{ icon('plus-circle fa-fw') }}{{ 'Add Network Admin'|trans }}</h1>
{% endblock %}
{% block content_body %}
    {% if (form is not null) %}
        {{ form_errors(form, { 'global_errors': true }) }}
        {%  form_theme form
            'jquery.collection.html.twig'
            'CertUnlpNgenBundle:NetworkAdmin/Frontend:contacts.html.twig' %}
        {{ form(form, {'attr': {'role':'form','id': 'add_update_form'},'style': 'horizontal', 'col_size': 'sm' }) }}

    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/network_admin/NetworkAdminForm.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var network_admin_form = new NetworkAdminForm();
        $('.admin-contacts').collection({
            min: 1
            }
        );
    </script>
{% endblock %}