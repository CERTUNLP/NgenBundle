<table class="table table-bordered">
        {%  for incidentDetected in incidentsDetected %}
                <tr>
                        <td>{{ incidentDetected.type | trans }}</td>
                        <td>{{ incidentDetected.feed | trans }}</td>
                        <td>{{ incidentDetected.state | trans }}</td>
                        <td>{{ incidentDetected.tlp | trans }}</td>
                        <td>{{ incidentDetected.date | date('Y-m-d H:i') }}</td>
                        <td>{{ incidentDetected.notes| trans }}</td>
                       

                </tr>>
        {% endfor %}
</table>
{% if not incident.incidentsDetected is empty%}
        <span class="label label-warning"> {{  'Detected '|trans}}{{ incident.incidentsDetected|length }}{{ ' times'|trans}}</span>
        <span class="label label-warning"> {{  'LAST: '|trans}}{{ incident.incidentsDetected|last }}</span>

{% endif %}
