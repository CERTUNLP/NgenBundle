<table class="table table-striped table-bordered table-hover dataTable no-footer">
    <tr role="row">
        <th>{{  'Type'|trans }}</th>
        <th>{{ 'Feed'|trans }}</th>
        <th>{{ 'State'|trans }}</th>
        <th>{{ 'TLP'|trans }}</th>
        <th>{{ 'Date'|trans }}</th>
        <th>{{ 'Notes'|trans }}</th>
        <th>{{ 'Evidence'|trans }}</th>
    </tr>
    <tbody>
    
        {%  for incidentDetected in incidentsDetected %}
                <tr role="row">
                        <td>{{ incidentDetected.type | trans }}</td>
                        <td>{{ incidentDetected.feed | trans }}</td>
                        <td>{{ incidentDetected.state | trans }}</td>
                        <td>{{ incidentDetected.tlp | trans }}</td>
                        <td>{{ incidentDetected.date | date('Y-m-d H:i') }}</td>
                        <td>{{ incidentDetected.notes| trans }}</td>
                        <td>{{ incidentDetected.evidenceFile }}</td>
                </tr>
        {% endfor %}    

    </tbody>

</table>
