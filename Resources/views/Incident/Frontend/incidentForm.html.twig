{% extends 'CertUnlpNgenBundle::Incident/Frontend/frontend.html.twig' %}

{% block content_header %}
    <h1 class="page-header">{{ icon('plus-circle fa-fw') }}Add incident
        <span class="tlp-green" id="tlp_label">&nbsp;TLP:GREEN&nbsp;</span>
    </h1>
{% endblock %}

{% block content_body %}
        {{ form_errors(form, { 'global_errors': true }) }}
        {{ form(form, {'attr': {'id': 'add_update_form'},'method': method | default('post'),'style': 'horizontal', 'col_size': 'sm' }) }}
{% endblock %}


{% block sideBar_search_path %}{{ path('cert_unlp_ngen_internal_incident_search_incident') }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@CertUnlpNgenBundle/Resources/public/js/incident/IncidentForm.js'
        '@CertUnlpNgenBundle/Resources/public/js/incident/InternalIncident.js'
        '@CertUnlpNgenBundle/Resources/public/js/incident/InternalIncidentApi.js'
        '@CertUnlpNgenBundle/Resources/public/js/incident/decision/IncidentDecisionApi.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var incidentForm = new IncidentForm();
        var internalIncidentApi = new InternalIncidentApi("{{ path("api_get") }}", "{{ app.user.apiKey }}");
        var incident_decision_api = new IncidentDecisionApi("{{ path("api_get") }}", "{{ app.user.apiKey }}");
        var internalIncident = new InternalIncident();

    </script>
{% endblock %}