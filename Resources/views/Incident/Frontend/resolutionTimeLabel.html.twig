{% if incident.isResolved %}
    {% if incident.resolutionDelayedMinutes > 0 %}
        <i class="fas fa-check-double" style="color:green"
           title="{{ 'Solved'|trans }} ({{ incident.resolutionDelayedDate.d?  incident.resolutionDelayedDate| date("%ddays %hmin %isec"): incident.resolutionDelayedDate | date("%hmin %isec") }} {{ ' left'|trans }})"></i>
        {{ label_success('Solved '|trans ~ (incident.resolutionDelayedDate.d?  incident.resolutionDelayedDate| date("%ddays %hmin %isec"): incident.resolutionDelayedDate | date("%hmin %isec")) ~ ' left'|trans) }}

    {% else %}
        <i class="fas fa-check-double" style="color:lightblue"
           title="{{ 'Solved'|trans }}({{ incident.resolutionDelayedDate.d?  incident.resolutionDelayedDate| date("%ddays %hmin %isec"): incident.resolutionDelayedDate | date("%hmin %isec") }}{{ ' late'|trans }})"></i>
        {{ label_info('Solved '|trans ~ (incident.resolutionDelayedDate.d?  incident.resolutionDelayedDate| date("%ddays %hmin %isec"): incident.resolutionDelayedDate | date("%hmin %isec")  ) ~ ' late '|trans) }}

    {% endif %}
{% else %}
    {% if incident.resolutionDelayedMinutes > 0 %}
        <i class="fas fa-hourglass-start" style="color:#f0ad4e"
           title="{{ 'Unsolved'|trans }}({{ incident.resolutionDelayedDate.d?  incident.resolutionDelayedDate| date("%ddays %hmin %isec"): incident.resolutionDelayedDate | date("%hmin %isec") }} {{ ' left'|trans }})"></i>
        {{ label_warning('Unsolved '|trans ~ (incident.resolutionDelayedDate.d?  incident.resolutionDelayedDate| date("%ddays %hmin %isec"): incident.resolutionDelayedDate | date("%hmin %isec") ) ~ ' left'|trans) }}

    {% else %}
        <i class="fas fa-hourglass-end" style="color:red"
           title="{{ 'Unsolved'|trans }}({{ incident.resolutionDelayedDate.d?  incident.resolutionDelayedDate| date("%ddays %hmin %isec"): incident.resolutionDelayedDate | date("%hmin %isec") }} {{ ' late'|trans }})"></i>
        {{ label_danger('Unsolved '|trans ~ (incident.resolutionDelayedDate.d?  incident.resolutionDelayedDate| date("%ddays %hmin %isec"): incident.resolutionDelayedDate | date("%hmin %isec")  ) ~ ' late'|trans) }}

    {% endif %}
{% endif %}