{% if incident.isAttended %}
    {% if (incident.responseDelayedMinutes > 0) %}
        <i class="fa fa-phone" style="color:green"
           title="{{ 'Responsed on time'|trans }} ({{ incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") }} {{ ' left'|trans }})"></i>
    {% else %}
        <i class="fa fa-phone" style="color:lightblue"
           title="{{ 'Answer delayed'|trans }}({{ incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") }}{{ ' late'|trans }})"></i>
    {% endif %}
{% else %}
    {% if (incident.responseDelayedMinutes > 0) %}
        <i class="fa fa-phone-slash" style="color:#f0ad4e"
           title="{{ 'Unanswered '|trans }}({{ incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") }} {{ ' left'|trans }})"></i>
    {% else %}
        <i class="fa fa-phone-slash" style="color:red"
           title="{{ 'Unanswered'|trans }}({{ incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") }}{{ ' late'|trans }})"></i>
    {% endif %}
{% endif %}



