{% if incident.openDays(true) >= 3 and incident.openDays(true) <=6 %}
    {% set trclass = "warning" %}
{% elseif incident.openDays(true) >6 %}
    {% set trclass = "danger" %}
{% else %}
    {% set trclass = "success" %}
{% endif %}

////FIX
{% for incidentDetected in incident.incidentsDetected %}
    {% if incidentDetected %}
        <span class="label label-{{ trclass }}">{{ incidentDetected.CountDaysFromDetection ~" days" }}</span>

<span class="label label-warning">ltd {{ incidentDetected.date | date('Y-m-d H:i') }}-{{ incidentDetected.feed  }}</span>
{% endif %}
{% endfor %}
