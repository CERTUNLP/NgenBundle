{% if lastTimeDetected %}
    {% set date = incident.lastTimeDetected %}
{% else %}
    {% set date = incident.date %}
{% endif %}  

{% if incident.openDays(true) >= 3 and incident.openDays(true) <=6 %}
    {% set trclass = "warning" %}
{% elseif incident.openDays(true) >6 %}
    {% set trclass = "danger" %}
{% else %}
    {% set trclass = "success" %}
{% endif %}

<span class="label label-{{ trclass }}">{{ incident.openDays(true)~" days" }}</span>
{% if lastTimeDetected %}
<span class="label label-warning">ltd {{ incident.lastTimeDetected | date('Y-m-d H:i:s') }}</span>
{%  else %}
<span class="label label-warning">ltd {{ incident.lastTimeDetected | date('Y-m-d H:i:s') }}</span>
{% endif %}
