<table class="table  table-hover dataTable no-footer">
    <tr role="row">
        <th>{{ 'Responsable'|trans }}</th>
        <th>{{ 'Date'|trans }}</th>
        <th>{{ 'Old State'|trans }}</th>
        <th>{{ 'New State'|trans }}</th>
        <th>{{ 'Action'|trans }}</th>
    </tr>
    <tbody>
    {% for stateChange in incident.getStatechanges %}
        <tr>
            <td>
                {{ stateChange.responsable }}
            </td>
            <td>
                {{ stateChange.date|date('Y-m-d H:i') }}
            </td>
            <td>
                {{ stateChange.oldState | trans }}
            </td>
            <td>
                {{ stateChange.newState |trans }}
            </td>
            <td>
                {{ stateChange.actionApplied |trans }}
            </td>

        </tr>

    {% endfor %}
    </tbody>

</table>
