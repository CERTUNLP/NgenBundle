{% if (incident.responseDelayedMinutes > 0) %}
    {% if  incident.isNew %}
        <span class="label label-warning"> {{ 'Waiting for response'|trans }}, {{ incident.responseDelayedMinutes }}{{ 'minutes left'|trans }}</span>
    {% else %}
        <span class="label label-success"> {{ 'Responsed on time'|trans }} {{ incident.responseDelayedMinutes }}{{ 'minutes left'|trans }}</span>
    {% endif %}
{% else %}
    {% if incident.isNew %}
        <span class="label label-danger"> {{ 'Waiting for response'|trans }}, {{ incident.responseDelayedMinutes * -1 }}{{ 'minutes delayed'|trans }}</span>
    {% else %}
        <span class="label label-danger"> {{ 'Response delayed for'|trans }} {{ incident.responseDelayedMinutes * -1 }}{{ 'minutes'|trans }}</span>
    {% endif %}

{% endif %}

