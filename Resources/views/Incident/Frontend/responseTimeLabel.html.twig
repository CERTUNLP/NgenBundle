{% if incident.isAttended %}
    {% if (incident.responseDelayedMinutes > 0) %}
        <i class="fa fa-phone" style="color:green"
           title="{{ 'Answered'|trans }} ({{ incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") }} {{ ' left'|trans }})"></i>
        {{ label_success('Answered '|trans ~ (incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec")) ~ ' left'|trans) }}
    {% else %}
        <i class="fa fa-phone" style="color:lightblue"
           title="{{ 'Answered'|trans }}({{ incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") }}{{ ' late'|trans }})"></i>
        {{ label_info('Answered '|trans ~ (incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec")) ~ ' late'|trans) }}

    {% endif %}
{% else %}
    {% if (incident.responseDelayedMinutes > 0) %}
        <i class="fa fa-phone-slash" style="color:#f0ad4e"
           title="{{ 'Unanswered '|trans }}({{ incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") }} {{ ' left'|trans }})"></i>
        {{ label_warning('Unanswered '|trans ~( incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") )~ ' left'|trans) }}
        {{ incident.responseDelayedMinutes }}

    {% else %}
        <i class="fa fa-phone-slash" style="color:red"
           title="{{ 'Unanswered'|trans }}({{ (incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec") )}}{{ ' late'|trans }})"></i>
        {{ label_danger('Unanswered '|trans ~ (incident.responseDelayedDate.d?  incident.responseDelayedDate| date("%ddays %hmin %isec"): incident.responseDelayedDate | date("%hmin %isec")) ~ ' late'|trans) }}
    {% endif %}
{% endif %}
