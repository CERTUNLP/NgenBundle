{% set atrasado1= incident.priority.responsetime-incident.responseMinutes %}

{% if (atrasado1 > 0) %}
    {% if  incident.isNew %}
        {{ label_warning('Waiting for response '|trans ~ atrasado1 ~ ' minutes left'|trans) }}
    {% else %}
        {{ label_success('Response on time '|trans ~ atrasado1 ~ ' minutes left'|trans) }}
    {% endif %}
{% else %}
    {% if incident.isNew %}
        {{ label_danger('Waiting for response '|trans ~ (atrasado1 * -1) ~ ' minutes delayed'|trans) }}
    {% else %}
        {{ label_danger('Response delayed for '|trans ~ (atrasado1 * -1) ~ ' minutes '|trans) }}
    {% endif %}

{% endif %}

