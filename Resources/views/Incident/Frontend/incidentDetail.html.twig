{% extends 'CertUnlpNgenBundle::Incident/Frontend/frontend.html.twig' %}

{% block content_body %}
    {% block incident_body %}
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"{{ 'Incident Information' | trans }}</h3>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                {{ 'Host/Network Involved'|trans }}
                            </td>
                            <td class="">
                                {{ object.address }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'State'|trans }}
                            </td>
                            <td class="">
                                {% include "CertUnlpNgenBundle:Incident:Frontend/list/stateLabel.html.twig" with {'incident': object} %}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Type'|trans }}
                            </td>
                            <td class="">
                                {{ object.type | trans }}
                            </td>
                        </tr>

                        <tr>
                            <td class="">
                                {{ 'Feed'|trans }}
                            </td>
                            <td class="">
                                {{ object.feed }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'TLP'|trans }}
                            </td>
                            <td>
                                <span class="label tlp-{{ object.tlp|lower }} left">
                                    TLP-{{ object.tlp | trans }}
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Original Date'| trans }}
                            </td>
                            <td class="">
                                {{ object.date |date('Y-m-d H:i') }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Created at'|trans }}
                            </td>
                            <td class="">
                                {{ object.createdAt|date('Y-m-d H:i') }}
                            </td>
                        </tr>
                        {% if object.openedAt %}
                            <tr>
                                <td class="">
                                    {{ 'Opened at'| trans }}
                                </td>
                                <td class="">
                                    {{ object.openedAt |date('Y-m-d H:i') }}
                                </td>
                            </tr>
                        {% endif %}

                        {% if object.incidentsDetected|length > 1 %}
                            <tr>
                                <td class="">
                                    {{ 'Last Time Detected'|trans }}
                                </td>
                                <td class="">
                                    {% include "CertUnlpNgenBundle:Incident:Frontend/incidentsDetectedSummary.html.twig" with {'incident': object, 'alreadyDetected':true} %}
                                </td>
                            </tr>
                        {% endif %}
                        <tr>
                            <td class="">
                                {{ 'Last Update'|trans }}
                            </td>
                            <td class="">
                                {{ object.updatedAt |date('Y-m-d H:i') }}
                            </td>
                        </tr>

                        <tr>
                            <td class="">
                                {{ 'Priority Impact/Urgency' |trans }}
                            </td>
                            <td class="">
                                {{ object.priority.impact }}/{{ object.priority.urgency }}
                            </td>
                        </tr>

                        <tr>
                            <td class="">
                                {{ 'RT/Rt' |trans }}
                            </td>
                            <td class="">
                                {% include "CertUnlpNgenBundle:Incident:Frontend/responseTimeLabel.html.twig" with {'incident': object,'alreadyDetected':object.incidentsDetected} %}
                                {% include "CertUnlpNgenBundle:Incident:Frontend/resolutionTimeLabel.html.twig" with {'incident': object,'alreadyDetected':object.incidentsDetected} %}
                            </td>
                        </tr>
                        {% if object.notes %}

                            <tr>
                                <td class="">
                                    {{ 'Notes' |trans }}
                                </td>
                                <td class="">
                                    {{ object.notes }}
                                </td>
                            </tr>
                        {% endif %}

                        {% if object.evidenceFilePath %}
                            <tr>
                                <td class="">
                                    {{ 'Evidence File'|trans }}
                                </td>
                                <td class="">
                                    <a href="{{ path('cert_unlp_ngen_internal_incident_frontend_evidence_incident',{'slug':object.slug}) }}">{{ 'Evidence'| trans }}
                                        (.zip)</a>
                                </td>
                            </tr>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block host_body %}
        <div class="col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'Host info'| trans }}</h3>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                {{ 'ip'|trans }}
                            </td>
                            <td class="">
                                {{ object.address }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Active'|trans }}
                            </td>
                            <td class="">
                                {{ object.origin and object.origin.isActive ? 'Yes'|trans:'No'|trans }}

                            </td>
                        </tr>
                        {% if object.origin and object.origin.network %}

                            <tr>
                                <td class="">
                                    {{ 'Network Entity'|trans }}
                                </td>
                                <td class="">
                                    {{ object.origin.network.networkEntity }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Network Admin'|trans }}
                                </td>
                                <td class="">
                                    {{ object.origin.network.networkAdmin }}

                                </td>
                            </tr>
                        {% endif %}

                    </table>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block network_body %}

        <div class="col-lg-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'Network info'|trans }}</h3>
                </div>
                <div class="panel-body table-responsive">
                    {% if object.network %}
                        <table class="table table-bordered">
                            <tr>
                                <td class="">
                                    {{ 'IP/mask'|trans }}
                                </td>
                                <td class="">
                                    {{ object.network }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Active'|trans }}
                                </td>
                                <td class="">
                                    {{ object.network.isActive ? 'Yes'|trans:'No'|trans }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Network Entity'|trans }}
                                </td>
                                <td class="">
                                    {{ object.network.networkEntity }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Network Admin'|trans }}
                                </td>
                                <td class="">
                                    {{ object.network.networkAdmin }}

                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                </td>
                                <td class="">
                                    {{ object.network.networkAdmin? object.network.networkAdmin.emailsAsString: '' }}
                                </td>
                            </tr>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>

    {% endblock %}
    {% block reporter_body %}
        <div class="col-lg-6">

            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'Reporter info' |trans }}</h3>
                </div>
                <div class="panel-body table-responsive">

                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                {{ 'Name'|trans }}
                            </td>
                            <td class="">
                                {{ object.reporter }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Email'|trans }}
                            </td>
                            <td class="">
                                {{ object.reporter.emailsAsString }}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block asigned_body %}
        {% if object.assigned %}
            <div class="col-lg-6">

                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'Assigned Info' |trans }}</h3>
                    </div>
                    <div class="panel-body table-responsive">

                        <table class="table table-bordered">
                            <tr>
                                <td class="">
                                    {{ 'Name'|trans }}
                                </td>
                                <td class="">
                                    {{ object.assigned }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Email'|trans }}
                                </td>
                                <td class="">
                                    {{ object.assigned.emailsAsString }}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}

    {% endblock %}
    {% block redetected_body %}
        {% if object.incidentsDetected %}
            <div class="col-lg-12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'Historical Detections'|trans }}
                            {% if not object.incidentsDetected is empty %}
                                <span class="label label-warning"> {{ 'Detected'|trans }}{{ object.incidentsDetected|length }}{{ 'times'|trans }}</span>
                                <span class="label label-warning"> {{ 'LAST:'|trans }}{{ object.incidentsDetected|last }}</span>

                            {% endif %}

                        </h3>
                    </div>
                    <div class="panel-body table-responsive">
                        {% include "@CertUnlpNgen/Incident/Frontend/redetectedTable.html.twig" with {'incident': object,'incidentsDetected':object.incidentsDetected} %}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endblock %}
    {% block state_history %}
        {% if object.getChangeStateHistory|length > 0 %}
            <div class="col-lg-12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'Historical Status Changes'|trans }}{{ 'Detected'|trans }} {{ label_info(object.getChangeStateHistory|length) }} {{ 'changes'|trans }}</h3>
                    </div>
                    <div class="panel-body table-responsive">
                        {% include "CertUnlpNgenBundle:Incident:Frontend/historyChangeSummary.html.twig" with {'incident': object} %}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endblock %}
    {% block comments %}

        <div class="col-lg-12">
            <div class="row">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'Comments'|trans }}</h3>
                    </div>
                    <div class="panel-body">

                        {% block comments_body %}
                            {{ render(controller('CertUnlpNgenBundle:Frontend/Incident/IncidentFrontend:incidentComments', {'incident': object, 'request': app.request})) }}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script>
        $(document).ready(function () {
            window.api_key = '{{ app.user.apikey }}';
        });
    </script>
    {% javascripts '@CertUnlpNgenBundle/Resources/public/js/incident/comments.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

{% block sideBar_search_path %}{{ path('cert_unlp_ngen_internal_incident_search_incident') }}{% endblock %}

{% block content_header %}
    <h2 class="page-header">{{ icon('arrow-circle-down fa-fw') }}{{ 'incident'|trans }} [{{ 'ID'|trans }}
        :{{ object.id }}
        ][{{ object.type }}
        ]{% include "CertUnlpNgenBundle:Incident:Frontend/list/stateLabel.html.twig" with {'incident': object} %}</h2>
{% endblock %}


