{% extends 'CertUnlpNgenBundle::Incident/Frontend/frontend.html.twig' %}

{% block content_body %}
    {% block incident_body %}
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Incident Information</h3>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                {{ "System Id"|trans}}
                            </td>
                            <td class="">
                                {{ object.id }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Host Address'|trans}}
                            </td>
                            <td class="">
                                {{ object.address }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'State'|trans}}
                            </td>
                            <td class="">
                                {% include "CertUnlpNgenBundle:Incident:Frontend/list/stateLabel.html.twig" with {'incident': object} %}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Closed'|trans}}
                            </td>
                            <td class="">
                                {{ object.isClosed ? 'Yes':'No' }}
                            </td>
                        </tr>

                        <tr>
                            <td class="">
                                {{ 'Type'|trans}}
                            </td>
                            <td class="">
                                {{ object.type }}
                            </td>
                        </tr>

                        <tr>
                            <td class="">
                                {{ 'Feed'|trans}}
                            </td>
                            <td class="">
                                {{ object.feed }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'TLP'|trans}}
                            </td>
                            <td>
                                <span class="label tlp-{{ object.tlp|lower }} left">
                                    TLP-{{ object.tlp }}
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Original Incident Date'| trans }}
                            </td>
                            <td class="">
                                {{ object.date |date('Y-m-d H:i') }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Created at'|trans}}
                            </td>
                            <td class="">
                                {{ object.createdAt|date('Y-m-d H:i') }}
                            </td>
                        </tr>
                        {% if object.openedAt %}
                        <tr>
                            <td class="">
                                {{ 'Opened at '| trans}}
                            </td>
                            <td class="">
                                {{ object.openedAt |date('Y-m-d H:i') }}
                            </td>
                        </tr>
                        {%  endif %}
                        {% if object.lastTimeDetected %}
                            <tr>
                                <td class="">
                                    {{ 'Last Time Detected'|trans}}
                                </td>
                                <td class="">
                                    {% include "CertUnlpNgenBundle:Incident:Frontend/dateLabel.html.twig" with {'incident': object, 'lastTimeDetected':true} %}
                                </td>
                            </tr>
                        {% endif %}
                        <tr>
                            <td class="">
                                {{  'Last Update'|trans }}
                            </td>
                            <td class="">
                                {{ object.updatedAt |date('Y-m-d H:i') }}
                            </td>
                        </tr>
                        {% if object.getChangeStateHistory %}
                            <tr>
                                <td class="">
                                    {{ 'Status Change history'|trans}}
                                </td>
                                <td class="">
                                    {% include "CertUnlpNgenBundle:Incident:Frontend/historyChangeLabel.html.twig" with {'incident': object} %}
                                </td>
                            </tr>
                        {% endif %}
                        <tr>
                            <td class="">
                                {{  'Impact/Urgency' |trans}}
                            </td>
                            <td class="">
                               {{ object.priority.impact }}/{{ object.priority.urgency }}
                            </td>
                        </tr>

                        <tr>
                            <td class="">
                                {{  'RT/Rt' |trans}}
                            </td>
                            <td class="">
                                {% include "CertUnlpNgenBundle:Incident:Frontend/responseTimeLabel.html.twig" with {'incident': object,'lastTimeDetected':object.lastTimeDetected} %}
                                {% include "CertUnlpNgenBundle:Incident:Frontend/resolutionTimeLabel.html.twig" with {'incident': object,'lastTimeDetected':object.lastTimeDetected} %}
                            </td>
                        </tr>
                        {% if object.notes %}

                        <tr>
                            <td class="">
                                {{  'Notes' |trans}}
                            </td>
                            <td class="">
                                {{ object.notes }}
                            </td>
                        </tr>
                        {% endif %}

                        {% if object.evidenceFilePath %}
                            <tr>
                                <td class="">
                                    {{ 'Evidence File'|trans}}
                                </td>
                                <td class="">
                                    <a href="{{ path('cert_unlp_ngen_internal_incident_frontend_evidence_incident',{'slug':object.slug}) }}">Evidence
                                        (.zip)</a>
                                </td>
                            </tr>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block host_body %}
        <div class="col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Host info</h3>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                {{ 'ip'|trans}}
                            </td>
                            <td class="">
                                {{ object.address }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Active'|trans}}
                            </td>
                            <td class="">
                                {{ object.origin.isActive ? 'Yes':'No' }}
                            </td>
                        </tr>
                        {% if object.origin.network %}

                            <tr>
                                <td class="">
                                    {{ 'Network Entity'|trans}}
                                </td>
                                <td class="">
                                    {{ object.origin.network.networkEntity }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Network Admin'|trans}}
                                </td>
                                <td class="">
                                    {{ object.origin.network.networkAdmin }}

                                </td>
                            </tr>
                        {% endif %}

                    </table>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block network_body %}

        <div class="col-lg-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'Network info'|trans}}</h3>
                </div>
                <div class="panel-body table-responsive">
                    {% if object.network %}
                        <table class="table table-bordered">
                            <tr>
                                <td class="">
                                    {{ 'IP/mask'|trans}}
                                </td>
                                <td class="">
                                    {{ object.network }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Active'|trans}}
                                </td>
                                <td class="">
                                    {{ object.network.isActive ? 'Yes':'No' }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Network Entity'|trans}}
                                </td>
                                <td class="">
                                    {{ object.network.networkEntity }}
                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                    {{ 'Network Admin'|trans}}
                                </td>
                                <td class="">
                                    {{ object.network.networkAdmin }}

                                </td>
                            </tr>
                            <tr>
                                <td class="">
                                </td>
                                <td class="">
                                    {{ object.network.networkAdmin.emailsAsString }}

                                </td>
                            </tr>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>

    {% endblock %}
    {% block reporter_body %}
        <div class="col-lg-6">

            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'Reporter info' |trans }}</h3>
                </div>
                <div class="panel-body table-responsive">

                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                {{ 'Name'|trans}}
                            </td>
                            <td class="">
                                {{ object.reporter }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Email'|trans}}
                            </td>
                            <td class="">
                                {{ object.reporter.emailsAsString }}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block asigned_body %}
        {% if object.assigned %}
            <div class="col-lg-6">

            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'Assigned Info' |trans }}</h3>
                </div>
                <div class="panel-body table-responsive">

                    <table class="table table-bordered">
                        <tr>
                            <td class="">
                                {{ 'Name'|trans}}
                            </td>
                            <td class="">
                                {{ object.assigned }}
                            </td>
                        </tr>
                        <tr>
                            <td class="">
                                {{ 'Email'|trans}}
                            </td>
                            <td class="">
                                {{ object.assigned.emailsAsString }}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        {% endif %}

    {% endblock %}

    {% block comments %}

        <div class="col-lg-12">
            <div class="row">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Comments</h3>
                    </div>
                    <div class="panel-body">

                        {% block comments_body %}
                            {{ render(controller('CertUnlpNgenBundle:Frontend/Incident/IncidentFrontend:incidentComments', {'incident': object, 'request': app.request})) }}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script>
        $(document).ready(function () {
            window.api_key = '{{ app.user.apikey }}';
        });
    </script>
    {% javascripts '@CertUnlpNgenBundle/Resources/public/js/incident/comments.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

{% block sideBar_search_path %}{{ path('cert_unlp_ngen_internal_incident_search_incident') }}{% endblock %}

{% block content_header %}
    <h2 class="page-header">{{ icon('arrow-circle-down fa-fw') }}incident [ID: {{ object.id }}
        ][{{ object.type }}
        ]{% include "CertUnlpNgenBundle:Incident:Frontend/list/stateLabel.html.twig" with {'incident': object} %}</h2>
{% endblock %}


